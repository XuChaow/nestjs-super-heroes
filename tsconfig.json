{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@super-heros/core": ["libs/core/src"],
      "@super-heros/core/*": ["libs/core/src/*"],
      "@super-heros/data": ["libs/data/src"],
      "@super-heros/data/*": ["libs/data/src/*"]
    }
  }
}
